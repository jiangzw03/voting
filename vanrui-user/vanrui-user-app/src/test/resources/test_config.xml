<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-4.0.xsd">


	<import resource="classpath:user-app_context.xml" />

    <context:property-placeholder ignore-unresolvable="true" location="classpath:conf/jdbc.properties" /> 
    <context:property-placeholder ignore-unresolvable="true" location="classpath:conf/remote.properties" />
    <context:property-placeholder ignore-unresolvable="true" location="classpath:conf/application.properties" />

    <context:component-scan annotation-config="true" base-package="com.vanrui.app.user.service">
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller" />
    </context:component-scan>

</beans>
